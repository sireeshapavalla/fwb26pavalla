extends layout

block content
  h1= title
  p Watches results
  div(class="container-fluid")
        div(class="row")
            -
                let details = [
                    {
                        "WName": "Rolex",
                        "WSize": "41mm",
                        "WCost": 9000
                    },
                    {
                        "WName": "Fossil",
                        "WPixels": "30mm",
                        "WCost": 7500
                    },
                    {
                        "WName": "Apple",
                        "WPixels": "41mm",
                        "WCost": 5000
                    },                   
                ]
            each c,index in details
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.WName}
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.WPixels}
                div(class="col-sm-2" onclick=`buy(${index})`) #{c.WCost}

                script.                
                      function buy(itemNo)
                      {
                            alert(`You purchased item ${itemNo+1}`)
                      }